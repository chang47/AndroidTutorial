<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/storePoints"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade 1"
        android:id="@+id/btnUpgrade1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/storePoints"
        android:layout_toStartOf="@+id/storePoints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvUpgrade1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/storePoints"
        android:layout_toEndOf="@+id/storePoints" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade 2"
        android:id="@+id/btnUpgrade2"
        android:layout_below="@+id/btnUpgrade1"
        android:layout_alignLeft="@+id/btnUpgrade1"
        android:layout_alignStart="@+id/btnUpgrade1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvUpgrade2"
        android:layout_alignBottom="@+id/btnUpgrade2"
        android:layout_alignLeft="@+id/tvUpgrade1"
        android:layout_alignStart="@+id/tvUpgrade1" />
</RelativeLayout>